{
  "name": "my-app",
  "version": "0.4.0",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "./server",
    "./client",
    "./db"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server",
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:server": "turbo build --filter=server",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "postinstall": "turbo build --filter=db --filter=server",
    "db:push": "drizzle-kit push ",
    "db:generate": "drizzle-kit generate ",
    "db:migrate": "drizzle-kit migrate"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.4",
    "turbo": "^2.5.5"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "bgg-client": "^1.1.2"
  }
}